{
  "extends": "./.quasar/tsconfig.json",

  "compilerOptions": {
    // ESM バンドルを前提にしたモジュール出力
    "module": "nodenext",
    // ESM/CJS 混在ライブラリの解決を行う
    "moduleResolution": "nodenext",
    // default import / named import を相互に許可
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    // そのほか既存の設定…
  },
}